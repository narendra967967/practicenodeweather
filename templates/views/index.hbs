<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <link href="css/style.css" rel="stylesheet">
</head>

<body>
    {{>header}}
    
    <div class="wrapper">
        <h1>Get Weather of your location</h1>
        <form action="" method="get">
            <input type="text" placeholder="Enter your location">
            <button type="submit">Search</button>
        </form>
        
    <div class="">
        <h3 style="font-style: italic;" id="msg">{{msg}}</h3>
        <h3 style="font-style: italic;" id="loc">Your location is {{location}}</h3>
        <h3 style="font-style: italic;">Expected Forecast : </h3>
        <h3 style="font-style: italic;" id="expfor">{{forecast}}</h3>        
    </div>
    </div>

    {{>footer}}

</body>

</html>

    <script src="js/app.js"></script>